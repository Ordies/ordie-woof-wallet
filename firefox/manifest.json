{
  "manifest_version": 3,
  "name": "Woof Wallet",
  "version": "1.2",

  "description": "Send and receive doginals using Woof Wallet",
  "homepage_url": "https://github.com/apezord/woof-wallet",
  "icons": {
    "48": "icons/icon-48.png"
  },

  "permissions": ["unlimitedStorage", "storage", "tabs", "unlimitedStorage", "webRequest", "scripting", "activeTab", "nativeMessaging"],

  "host_permissions": [ "*://dogechain.info/*", "*://doginals.com/*", "*://api.blockchair.com/*"],

  "action": {
    "default_icon": "icons/icon-32.png",
    "default_title": "Woof Wallet",
    "default_popup": "popup/popup.html"
  },

  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "apezord-woofwallet@proton.me"
    }
  }
}
